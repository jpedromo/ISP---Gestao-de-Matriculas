@model ISP.GestaoMatriculas.ViewModels.EntityProfileViewModel

@{
    ViewBag.Title = "Manage";
}

<h2>Manage</h2>

<p class="message-success">@ViewBag.StatusMessage</p>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken();

    <fieldset>
        <legend>@ViewBag.NomeEntidade</legend>

        <div class="editor-label">
            @Html.HiddenFor(model => model.entityId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.nomeResponsavel)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nomeResponsavel)
            @Html.ValidationMessageFor(model => model.nomeResponsavel)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.emailResponsavel)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.emailResponsavel)
            @Html.ValidationMessageFor(model => model.emailResponsavel)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.telefoneResponsavel)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.telefoneResponsavel)
            @Html.ValidationMessageFor(model => model.telefoneResponsavel)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

