@model ISP.GestaoMatriculas.Model.Entidade

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Entidade</legend>

        @Html.HiddenFor(model => model.entidadeId)

        <div class="editor-label">
            @Html.LabelFor(model => model.nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nome)
            @Html.ValidationMessageFor(model => model.nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.nomeResponsavel)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nomeResponsavel)
            @Html.ValidationMessageFor(model => model.nomeResponsavel)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.emailResponsavel)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.emailResponsavel)
            @Html.ValidationMessageFor(model => model.emailResponsavel)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.telefoneResponsavel)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.telefoneResponsavel)
            @Html.ValidationMessageFor(model => model.telefoneResponsavel)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.scope)
        </div>
        <div class="editor-field">
            @Html.DropDownList("scope", (SelectList) ViewBag.scopeList)
            @Html.ValidationMessageFor(model => model.scope)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.roleId)
        </div>
        <div class="editor-field">
            @Html.DropDownList("roleId", (SelectList) ViewData["Roles"])
            @Html.ValidationMessageFor(model => model.roleId)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

