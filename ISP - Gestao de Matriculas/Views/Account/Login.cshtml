<h2>Autenticação</h2>
<div class="well fuelux">
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new {@id = "AccountForm", ReturnUrl = ViewBag.ReturnUrl}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Insira as suas credenciais</legend>
            <div class="editor-label">
				@Html.LabelFor(m => m.UserName)
			</div>
			<div class="editor-field">
				@Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
			</div>
            <div class="editor-label">
				@Html.LabelFor(m => m.Password)
			</div>
			<div class="editor-field">
				@Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
			</div>
            <table>
            <tr>
            <td>
            @Html.CheckBoxFor(m => m.RememberMe)
            </td>
            <td>
            @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
            </td>
            </tr>
            </table>
			@Html.HiddenFor(m => m.ReturnUrl)
            <br />
        <input type="submit" class="btn btn-primary" id="entrarBtn" value="Entrar" style="width:205px"/>
    </fieldset>
    }
