@model ISP.GestaoMatriculas.Models.RegisterModel

@{
    ViewBag.Title = "Create";
}
@section scripts{
<script type='text/javascript'>
    $(document).ready(function () {
        $("input#Password").keyup(function (e) {
            if ($('input#Password').val() != '') {
                $('input#utilizadorAD').prop('disabled', true);
            }
            else {
                $('input#utilizadorAD').prop('disabled', false);
            }
        });
        $("input#utilizadorAD").keyup(function (e) {
            if ($('input#utilizadorAD').val() != '') {
                $('input#Password').prop('disabled', true);
                $('input#ConfirmPassword').prop('disabled', true);
            }
            else {
                $('input#Password').prop('disabled', false);
                $('input#ConfirmPassword').prop('disabled', false);
            }
        });
    });
</script>
}
<h2>Create</h2>

<div class="well fuelux">
@using (Html.BeginForm("Create", "Account", FormMethod.Post, new {@id = "AccountForm"})) {
    @Html.ValidationSummary(true)
