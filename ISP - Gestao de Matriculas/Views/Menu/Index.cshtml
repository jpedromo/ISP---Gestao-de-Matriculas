                <li><a href="@Url.Content("~/Account/Index")"><i class="fa fa-user"></i> Gerir Utilizadores</a></li>
                <li><a href="@Url.Content("~/Entidades/Index")"><i class="fa fa-user"></i> Gerir Entidades</a></li>
