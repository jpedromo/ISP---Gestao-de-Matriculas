                                @Html.DisplayNameFor(model => model.eventoStagging.utilizadorArquivo)
                            </div>
                            if (Model.eventoStagging.arquivado)
                            { 
                            <div class="display-field">
                                @Html.DisplayFor(model => model.eventoStagging.utilizadorArquivo)
                            </div>}
