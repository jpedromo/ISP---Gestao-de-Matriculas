                            </div>
                            <div class="display-field">
                                @Html.DisplayFor(model => model.eventoStagging.totalErrosCumulativo)
                            </div>

                            <div class="display-label">
                                @Html.DisplayNameFor(model => model.eventoStagging.totalAvisosCumulativo)
                            </div>
                            <div class="display-field">
                                @Html.DisplayFor(model => model.eventoStagging.totalAvisosCumulativo)
                            </div>

                            <div class="display-label">
                                @Html.DisplayNameFor(model => model.eventoStagging.dataCorrecaoErro)
                            </div>
                            if (Model.eventoStagging.dataCorrecaoErro != null)
                            { 
                            <div class="display-field">
                                @Html.DisplayFor(model => model.eventoStagging.dataCorrecaoErro)
                            </div>
                            }
                            else
