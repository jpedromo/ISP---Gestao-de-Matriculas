                        { 
                            <div class="display-field">
                                @Html.DisplayFor(model => model.eventoStagging.ficheiro.nomeFicheiro)
                            </div>
                        }
                        else
                        { 
                            <div>
                                N/A</div>}
                        @if (Model.eventoStagging.estadoEvento.valor == "ERRO")
                        { 
                            <div class="display-label">
                                @Html.DisplayNameFor(model => model.eventoStagging.arquivado)
                            </div>
                            <div class="display-field">
                                @Html.DisplayFor(model => model.eventoStagging.arquivado)
                            </div>
                
