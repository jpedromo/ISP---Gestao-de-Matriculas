                                @Html.DisplayNameFor(model => model.eventoStagging.dataArquivo)
                            </div>
                            if (Model.eventoStagging.arquivado)
                            { 
                            <div class="display-field">
                                @Html.DisplayFor(model => model.eventoStagging.dataArquivo)
                            </div>
                            }
                            else
                            { 
                            <div>
                                N/A</div>}
                
