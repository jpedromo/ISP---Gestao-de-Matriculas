    <p>
        @Html.ActionLink("Voltar à listagem", "Index", new { tabNr = 2 })
        @if (Model.eventoStagging.estadoEvento.valor == "ERRO" && !User.IsInRole("ISP-Leitura"))
        {
            <span>| @Html.ActionLink("Editar", "EditStagging", new { id = Model.eventoStagging.eventoStaggingId })
