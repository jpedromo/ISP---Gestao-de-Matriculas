                        </div>
                        <div class="display-label">
                            @Html.DisplayNameFor(model => model.eventoStagging.dataInicioCobertura)
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.eventoStagging.dataInicioCobertura)
                        </div>
