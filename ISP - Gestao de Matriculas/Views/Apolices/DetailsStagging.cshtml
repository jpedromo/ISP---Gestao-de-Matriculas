                        <div class="display-label">
                            @Html.DisplayNameFor(model => model.eventoStagging.codigoOperacao)
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.eventoStagging.codigoOperacao)
                        </div>
                        <div class="display-label">
                            @Html.DisplayNameFor(model => model.eventoStagging.dataReporte)
                        </div>
                        <div class="display-field">
